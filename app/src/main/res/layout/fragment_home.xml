<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/text_to_speech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Type to speak"
        android:inputType="textMultiLine"
        android:lines="5"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/speak_for_text"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="250dp"
        android:text="Speak" />
    <Button
        android:id="@+id/clear_for_text"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="250dp"
        android:text="clear"/>
    <Button
        android:id="@+id/stop_for_text"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="250dp"
        android:text="stop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed"
        android:textSize="16sp"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="60dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"/>

    <SeekBar
        android:id="@+id/seek_bar_speed"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="340dp"
        android:progress="50" />

    <TextView
        android:id="@+id/speech_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="400dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:gravity="start|top"
        android:lines="5"
        android:text="Speak"
        android:textColor="@color/black" />

    <ImageButton
        android:id="@+id/mic_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="550dp"
        android:src="@drawable/ic_baseline_mic_off_24" />

    <TextView
        android:id="@+id/name_of_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="25dp"
        android:text="Welcome Back Vedant ! "
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />


</RelativeLayout>