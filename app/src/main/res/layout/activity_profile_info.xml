<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile_info"
    android:background="@drawable/info_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbardisp_view_prof"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <EditText
        android:id="@+id/birth_date_edit_view_profile"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_border"
        android:drawablePadding="16dp"
        android:editable="false"
        android:ems="10"
        android:hint="Date of Birth"
        android:inputType="date"
        android:padding="16dp"
        android:paddingLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_card"
        android:layout_alignParentStart="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="15dp"
        android:text="Email"
        android:textColor="#80E0FF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_view_profile_view_edit"
        android:layout_alignParentStart="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="10dp"
        android:text="First Name"
        android:textColor="#80E0FF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/first_name_edit_view_profile"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_border"
        android:drawablePadding="16dp"
        android:editable="false"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:padding="16dp"
        android:paddingLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_name_edit_view_profile"
        android:layout_alignParentStart="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="10dp"
        android:text="Last Name"
        android:textColor="#80E0FF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/last_name_edit_view_profile"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_border"
        android:drawablePadding="16dp"
        android:editable="false"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:padding="16dp"
        android:paddingLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/last_name_edit_view_profile"
        android:layout_alignParentStart="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="10dp"
        android:text="Date Of Birth"
        android:textColor="#80E0FF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email_view_profile_view_edit"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_alignParentStart="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_border"
        android:drawablePadding="16dp"
        android:editable="false"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:padding="16dp"
        android:paddingLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <Button
        android:id="@+id/Edit_profile_bt"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/birth_date_edit_view_profile"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/complete" />

    <androidx.cardview.widget.CardView
        android:id="@+id/image_card"
        android:layout_width="133dp"
        android:layout_height="117dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="135dp"
        android:layout_marginTop="60dp"
        android:elevation="10dp"
        app:cardCornerRadius="20dp">


        <ImageView
            android:id="@+id/profile_pic_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />


    </androidx.cardview.widget.CardView>


</RelativeLayout>